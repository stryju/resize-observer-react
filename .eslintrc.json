{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "globals": { "global": true },
  "plugins": ["react", "flowtype"],
  "rules": {
    "curly": ["error", "all"],
    "indent": ["error", 2],
    "jsx-quotes": ["error"],
    "quotes": ["error", "double", { "avoidEscape": true }],
    "semi": ["error", "always"],
    "strict": ["error", "global"]
  }
}
